{
  "name": "music-player",
  "private": true,
  "version": "0.2.3",
  "description": "Music Player",
  "author": {
    "name": "JDBeWL Team"
  },
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "concurrently \"pnpm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron-build": "pnpm run build && electron-builder",
    "dist": "pnpm run build && electron-builder --publish=never"
  },
  "build": {
    "appId": "com.mer.music-player",
    "productName": "Music Player",
    "directories": {
      "output": "release"
    },
    "icon": "public/kazusa.ico",
    "files": [
      "dist/assets/**/*",
      "dist/index.html",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/kazusa.ico"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/kazusa.ico",
      "signAndEditExecutable": false,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/kazusa.ico",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "shortcutName": "Sound Horizon Player",
      "installerIcon": "public/kazusa.ico",
      "uninstallerIcon": "public/kazusa.ico",
      "installerHeaderIcon": "public/kazusa.ico"
    },
    "asar": true
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@playwright/mcp": "^0.0.29",
    "axios": "^1.10.0",
    "buffer": "^6.0.3",
    "bufferutil": "^4.0.9",
    "echarts": "^5.6.0",
    "electron-build": "^0.0.3",
    "electron-reload": "2.0.0-alpha.1",
    "music-metadata": "^11.6.0",
    "pinia": "^3.0.3",
    "playwright": "^1.54.1",
    "utf-8-validate": "^6.0.5",
    "vue": "^3.5.17",
    "vue3-virtual-scroll-list": "^0.2.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^24.13.3",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "bufferutil",
      "electron",
      "esbuild",
      "utf-8-validate"
    ]
  }
}